{% extends 'base.html.twig' %}

{% block stylesheets %}
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
{% endblock %}

{% block body %}
    <header class="sticky top-0 z-50 flex justify-between items-center p-4 bg-white shadow-md rounded-xl mx-5 mt-6">
        <div class="flex items-center space-x-2">
            <img src="{{ asset('assets/IconoRobot.png') }}" alt="Icono Robot" class="w-12 h-12">
            <h1 class="text-lg font-semibold text-gray-700">ReciTech</h1>
        </div>
        <nav class="flex items-center space-x-6">
            <a href="/" class="text-gray-600 hover:text-green-600 font-medium">Home</a>
        </nav>
    </header>

    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Inicio de Sesión</h2>
            <form method="post" action="{{ path('app_main_iniciosesion') }}">
                <!-- Campo de Correo Electrónico -->
                <div class="mb-4">
                    <label for="email" class="block text-gray-600 font-medium mb-2">Correo electrónico</label>
                    <input type="text" id="email" name="_username" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ingresa tu correo">
                </div>
                <!-- Campo de Contraseña -->
                <div class="mb-6">
                    <label for="password" class="block text-gray-600 font-medium mb-2">Contraseña</label>
                    <input type="password" id="password" name="_password" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ingresa tu contraseña">
                </div>
                <!-- Botón de Inicio de Sesión -->
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">Iniciar Sesión</button>
                
                {# MENSAJES FLASH DEBAJO DEL BOTÓN #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="
                            {% if label == 'danger' or label == 'error' %}
                                bg-red-100 border border-red-400 text-red-700
                            {% else %}
                                bg-green-100 border border-green-400 text-green-700
                            {% endif %}
                            px-4 py-3 rounded mt-4 mb-4 text-center font-semibold
                        ">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

               
                <!-- Enlace para Registrarse -->
                <p class="text-center text-gray-600 mt-4">
                    ¿Aún no estás registrado?
                    <a href="/registro" class="text-blue-500 font-medium hover:underline">Regístrate aquí</a> 
                </p>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/JSPaginaInicio.js') }}"></script>
{% endblock %}