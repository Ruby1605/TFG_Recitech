{% extends 'base.html.twig' %}

{% block title %}Hello RecetasController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <a href="{{ path('app_administrador') }}" class="btn btn-secondary mb-3">Volver al panel de administración</a>
    <a href="{{ path('receta_nueva') }}" class="btn btn-primary mb-3 ms-2">Nueva Receta</a>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Dificultad</th>
                    <th>Tiempo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for receta in recetas %}
                    <tr>
                        <td>{{ receta.id }}</td>
                        <td>{{ receta.nombre }}</td>
                        <td>{{ receta.dificultad }}</td>
                        <td>{{ receta.tiempo }}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <form action="{{ path('receta_ver', {'id': receta.id}) }}" method="get" style="display:inline;">
                                    <button type="submit" class="btn btn-info btn-sm">Ver</button>
                                </form>
                                <form action="{{ path('receta_editar', {'id': receta.id}) }}" method="get" style="display:inline;">
                                    <button type="submit" class="btn btn-warning btn-sm">Editar</button>
                                </form>
                                <form action="{{ path('receta_eliminar', {'id': receta.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar esta receta?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No hay recetas disponibles.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
