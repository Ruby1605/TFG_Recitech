{% extends 'base.html.twig' %}

{% block stylesheets %}
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
{% endblock %}

{% block body %}
    <header class="sticky top-0 z-50 flex justify-between items-center p-4 bg-white shadow-md rounded-xl mx-5 mt-6">
        <div class="flex items-center space-x-2">
            <img src="{{ asset('assets/IconoRobot.png') }}" alt="Icono Robot" class="w-12 h-12">
            <h1 class="text-lg font-semibold text-gray-700">ReciTech</h1>
        </div>
        <nav class="flex items-center space-x-6">
            <a href="/" class="text-gray-600 hover:text-green-600 font-medium">Home</a>
        </nav>
    </header>

    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Registrarse</h2>
            <!-- Campo de Nombre de Usuario -->
            <div class="mb-4">
                <label for="username" class="block text-gray-600 font-medium mb-2">Nombre de usuario</label>
                <input type="text" id="username" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ingresa tu usuario">
            </div>
            <!-- Campo de Contraseña -->
            <div class="mb-6">
                <label for="password" class="block text-gray-600 font-medium mb-2">Contraseña</label>
                <input type="password" id="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ingresa tu contraseña">
            </div>
            <!-- Botón de Registrarse -->
            <button onclick="window.location.href='{{ path('app_home') }}'" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">Registrarse</button>
            <!-- Botón de Inicio con Google -->
            <button class="w-full bg-gray-200 text-gray-700 py-2 rounded-lg mt-4 hover:bg-gray-300 transition">Registrarse con Google</button>
            <!-- Enlace para Iniciar Sesión -->
            <p class="text-center text-gray-600 mt-4">
                ¿Ya estas registrado?
                <a href="/inicio-de-sesion" class="text-blue-500 font-medium hover:underline">Inicia sesión aquí</a>
            </p>
        </div>
    </div>
{% endblock %}